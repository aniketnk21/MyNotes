<Window x:Class="MyNotes.Desktop.FindReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find and Replace"
        Width="460" Height="260"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="#252526"
        Foreground="#D4D4D4">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Find Row -->
        <Label Grid.Row="0" Content="Find:" VerticalAlignment="Center"/>
        <TextBox x:Name="FindTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,8,8"
                 VerticalAlignment="Center" KeyDown="FindTextBox_KeyDown"/>
        <Button x:Name="FindNextBtn" Grid.Row="0" Grid.Column="2" Content="Find Next"
                Width="90" Margin="0,0,0,8" Click="FindNext_Click"/>

        <!-- Replace Row -->
        <Label Grid.Row="1" Content="Replace:" VerticalAlignment="Center"/>
        <TextBox x:Name="ReplaceTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,8,8"
                 VerticalAlignment="Center"/>
        <Button x:Name="ReplaceBtn" Grid.Row="1" Grid.Column="2" Content="Replace"
                Width="90" Margin="0,0,0,8" Click="Replace_Click"/>

        <!-- Options Row -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,4,0,8">
            <CheckBox x:Name="MatchCaseCheck" Content="Match Case" Margin="0,0,15,0"/>
            <CheckBox x:Name="WholeWordCheck" Content="Whole Word" Margin="0,0,15,0"/>
            <CheckBox x:Name="UseRegexCheck" Content="Regex" Margin="0,0,15,0"/>
        </StackPanel>
        <Button Grid.Row="2" Grid.Column="2" Content="Replace All" Width="90" Click="ReplaceAll_Click"/>

        <!-- Status -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,4,0,0">
            <TextBlock x:Name="StatusText" Foreground="#808080" FontSize="12"/>
        </StackPanel>
        <Button Grid.Row="3" Grid.Column="2" Content="Find Prev" Width="90" Click="FindPrev_Click"/>
    </Grid>
</Window>
